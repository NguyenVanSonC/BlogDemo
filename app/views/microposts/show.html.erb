<section class="box white">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <ul class="clean-list row blog-post">
          <li class="col-md-12">
            <article class="blog-item">
              <header class="blog-head">
                <figure>
                </figure>
                <h4><%= @micropost.content %></h4>
                <ul class="inline-list blog-meta">
                  <li><%= link_to @micropost.user_name,@micropost.user, class: "text-red hover-text-dark-red" %></li>
                  <li><%= @micropost.created_at %></li>
                </ul>
              </header>
              <div class="blog-content">
                <p>
                  <%= @micropost.content %>
                </p>
                </p>
              </div>
            </article>
          </li>
        </ul>
        <% if logged_in? %>
          <%= render partial: "comments/form", locals: {comments: @comment} %>
        <% end %>
        <div id="show-comment">
          <%= render partial: "shared/comments", locals: {comments: @comments} %>
        </div>
      </div>
    </div>
  </div>
</section>
