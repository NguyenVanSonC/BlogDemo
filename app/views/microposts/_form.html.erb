<%= form_for @micropost, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <p>
    <%= f.text_area :content, class: "demo_input", placeholder: "Content", id: "micropost-content" %>
  </p>
  <p class="col-md-12">
    <%= f.submit t(".submit"), class: "button-md dark-blue hover-red to-right" %>
  </p>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>
